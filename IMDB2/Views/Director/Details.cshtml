@model IMDB2.ViewModel.DirectorDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="height:10px"></div>
<div>

    <div>
        <h1 >@Model.Director.FirstName @Model.Director.LastName </h1>
    </div>


</div>

<div style="height:10px"></div>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Movies </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <th scope="row"><a href="@Url.Content("/Movies/Details/" + movie.Id )">@movie.Name</a></th>


                </tr>
            }

        </tbody>
    </table>
</div>
