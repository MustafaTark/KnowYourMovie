@*@model IMDB2.Models.Director*@

@{
    ViewBag.Title = "AddDirector";
}

<h2>AddDirector</h2>


@using (Html.BeginForm("AddDirector", "Director", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Director</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Select Director", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("SelectedActorId", (IEnumerable<SelectListItem>)ViewBag.DirectorList, new { @class = "nav-link dropdown-toggle" })
            <div style="height:10px"></div>
            @Html.ActionLink("Add New Director", "NewDirector", "Director", null, new { @class = "btn btn-warning" })
        </div>

    </div>
    <div style="height:10px"></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create New Director" class="btn btn-warning" />
        </div>
    </div>
</div>
}

